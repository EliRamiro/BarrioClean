<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingStart="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_cerrar"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/img_back_arrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center|start"
            android:textColor="@color/blanco"
            android:textSize="25dp"
            android:fontFamily="@font/gotham_medium"
            android:text="Mi perfil"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default"
        />

    <!-- Full name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Nombres y Apellidos"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/btn_border_celeste"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/edit_full_name"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/finish_full_name"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit_finish"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Correo"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_email"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:background="@drawable/btn_border_celeste"
                android:enabled="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/edit_email"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/finish_email"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit_finish"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Documento -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Documento Identidad"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_documento"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:background="@drawable/btn_border_celeste"
                android:enabled="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/edit_documento"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/finish_documento"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit_finish"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Cambiar contraseña -->
    <LinearLayout
        android:id="@+id/linear_change_password"
        android:background="@drawable/btn_default_celeste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="15dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:src="@drawable/icon_change_password" />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:textSize="18sp"
            android:text="Cambiar contraseña"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_regular"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:src="@drawable/img_right_arrow" />

    </LinearLayout>

    <!-- Métodos de pago -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_metodos_pagos"
        android:background="@drawable/btn_default_celeste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:src="@drawable/icon_card"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_regular"
            android:text="Métodos de Pago"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:src="@drawable/img_right_arrow" />
    </LinearLayout>

    <!-- Cambiar teléfono -->
    <LinearLayout
        android:id="@+id/linear_change_phone"
        android:background="@drawable/btn_default_celeste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:src="@drawable/icon_telefono"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_regular"
            android:text="Cambiar número de teléfono"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:src="@drawable/img_right_arrow" />
    </LinearLayout>



</LinearLayout>