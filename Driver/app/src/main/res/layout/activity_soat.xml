<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.BreveteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingStart="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_cerrar"
            android:layout_width="22dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/img_back_arrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center|start"
            android:textColor="@color/blanco"
            android:textSize="25dp"
            android:fontFamily="@font/gotham_medium"
            android:text="Brevete"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_soat"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/gotham_medium"
        android:text="Foto de SOAT"/>

    <ImageView
        android:id="@+id/img_soat"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingTop="20dp"
        android:paddingStart="50dp"
        android:paddingEnd="30dp"
        android:layout_gravity="center"
        android:background="@drawable/background_photo"/>

    <Button
        android:id="@+id/btn_listo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_default_verde"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Listo"
        android:textColor="@color/blanco"/>


</LinearLayout>