<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maps_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/blanco"
    app:behavior_hideable="false"
    app:layout_collapseMode="pin"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:id="@+id/linear_resume"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Inactivo"/>
            <ToggleButton
                android:id="@+id/toggle_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textOff="Activar"
                android:textOn="Desactivar"
                android:textColor="@color/blanco"
                android:background="@drawable/btn_default_verde"/>
            <Switch
                android:visibility="gone"
                android:id="@+id/switch_available"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Activo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_ingresos"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:text="Ingresos"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="del día"
                    android:textColor="@color/gris_oscuro"
                    android:fontFamily="@font/gotham_medium"/>
            </LinearLayout>

            <View
                android:background="@color/gris_oscuro"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_saldo"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="S/ 120.00"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/gotham_medium"/>
                </LinearLayout>

                <View
                    android:background="@color/gris_oscuro"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_peso"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text=" - 2m3"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/gotham_medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_on_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_servicio"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clean Express"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center|end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12/08/2020 03:00 am"
                android:fontFamily="@font/gotham_regular"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/txt_metodo_pago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:text="PAGO EFECTIVO"
                    android:textColor="@color/blanco"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorAccent">
                <View
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center|end"
                    android:layout_height="wrap_content"
                    android:text="Tarifa"
                    android:textColor="@color/gris_oscuro"
                    android:fontFamily="@font/gotham_medium"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/txt_monto"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:text="S/ 60"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotham_medium"
                    android:textColor="@color/colorAccent"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center|end"
                    android:layout_height="wrap_content"
                    android:text="Comisión"
                    android:textColor="@color/gris_oscuro"
                    android:fontFamily="@font/gotham_medium"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/txt_comision"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:text="S/ 12"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotham_medium"
                    android:textColor="@color/colorAccent"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/btn_default_azul"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:gravity="center|end"
                android:layout_height="wrap_content"
                android:text="Dinero ganado"
                android:textColor="@color/blanco"
                android:background="@null"/>
            <TextView
                android:id="@+id/txt_monto_final"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="S/ 48"
                android:textSize="18sp"
                android:fontFamily="@font/gotham_regular"
                android:textColor="@color/blanco"
                android:background="@null"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linear_arrive"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:background="@drawable/btn_default_verde"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="He llegado"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotham_regular"
                    android:textColor="@color/blanco"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linear_cancelar"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:background="@drawable/btn_default_gris"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cancelar"
                    android:textSize="18sp"
                    android:fontFamily="@font/gotham_regular"
                    android:textColor="@color/blanco"
                    android:background="@null"/>

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimary"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gris_oscuro">

            <ImageView
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/img_problema"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/gotham_medium"
                    android:textSize="18sp"
                    android:text="TUVE UN PROBLEMA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/blanco"
                        android:fontFamily="@font/gotham_medium"
                        android:textSize="12sp"
                        android:text="@string/sir_problem"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/blanco"
                        android:fontFamily="@font/gotham_medium"
                        android:textSize="12sp"
                        android:text="@string/payment_problem"/>
                </LinearLayout>

                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/blanco"
                    android:fontFamily="@font/gotham_medium"
                    android:textSize="12sp"
                    android:text="@string/emergency_problem"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>