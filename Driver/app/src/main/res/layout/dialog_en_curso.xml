<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/negro"
            android:fontFamily="@font/gotham_medium"
            android:textStyle="bold"
            android:text="En curso"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_en_curso"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_en_curso_service"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Clean Express"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="S/"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/gris_oscuro"
                    android:fontFamily="@font/gotham_medium"/>
                <TextView
                    android:id="@+id/dialog_en_curso_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="120.00"
                    android:textSize="30dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/gotham_medium"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_marker"/>
            <TextView
                android:id="@+id/dialog_en_curso_destino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Av. Carlos Izaguirre 1702"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dialog_en_curso_btn_finalizar"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Finalizar"
                android:textColor="@color/blanco"
                android:textSize="19sp"
                android:background="@drawable/btn_default_verde"/>
            <Button
                android:id="@+id/dialog_en_curso_btn_cancelar"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Cancelar"
                android:textColor="@color/blanco"
                android:textSize="19sp"
                android:background="@drawable/btn_default_gris"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>